{
  "name": "bot-tester",
  "version": "2.0.0",
  "description": "Easily test bots made with the bot builder framework",
  "main": "dist/BotTester.js",
  "types": "dist/BotTester.d.ts",
  "author": "Matt Schwartz <mattschwartz310@gmail.com>",
  "license": "MIT",
  "keywords": [
    "botbuilder",
    "test",
    "tdd",
    "bdd",
    "chai",
    "mocha",
    "dialog",
    "mock",
    "bot",
    "chatbot",
    "automation",
    "unit test",
    "integration test",
    "component test",
    "integration"
  ],
  "bugs": {
    "url": "https://github.com/microsoftly/BotTester/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/microsoftly/BotTester.git"
  },
  "scripts": {
    "buildSrc": "tsc -p src/tsconfig.json",
    "prepublishOnly": "npm run cleanBuild && npm run test && npm run buildTypeDocs",
    "clean": "rm -rf ./dist",
    "build": "tsc",
    "lint": "tslint 'src/**/*.ts'",
    "lint:fix": "tslint 'src/**/*.ts' --fix",
    "cleanBuild": "npm run clean && npm run build",
    "watch": "tsc -w",
    "test": "node_modules/mocha/bin/_mocha --require node_modules/ts-node/register test/BotTester.spec.ts",
    "buildTypeDocs": "yarn cleanBuild && typedoc --excludeNotExported --out docs --hideGenerator src/BotTester.ts --module commonjs --gaID UA-105358964-1"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "botbuilder": "^3.8.4",
    "chai": "^4.0.2",
    "chai-samsam": "^0.0.2",
    "colors": "^1.1.2",
    "global": "^4.3.2",
    "mocha": "^3.4.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.25",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "typescript": "^2.4.1"
  },
  "files": [
    "dist",
    "src"
  ]
}
